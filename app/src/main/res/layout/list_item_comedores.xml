<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="0dp">

    <!-- Imágen propia correspondiente a cada comedor-->
    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>


        <!-- TextView que contendrá el nombre de los comedores-->
    <TextView
        android:id="@+id/comedores_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/list_item_icon"
        android:layout_alignTop="@+id/list_item_icon"
        />

    <TextView
        android:id="@+id/comedores_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comedores_titulo"
        android:layout_alignStart="@id/comedores_titulo"/>

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_notification_overlay"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>